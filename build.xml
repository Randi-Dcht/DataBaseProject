<project name ="ProjetBDD">

  <target name="build">
    <mkdir dir="compile"/>
    <javac srcdir="code" destdir="compile" encoding="utf8" classpath=".:lib/sqlite-jdbc-3.27.2.1.jar">
    </javac>
  </target>


<!--permet de supprimer les fichiers .class et la javadoc-->
  <target name="clean">
    <delete dir ="compile"/>
  </target>


<!--permet de lancer le projet-->
  <target name="run" depends="build">
	  <java classname="be.ac.umons.projetBDD.Main" classpath=".:compile:lib/sqlite-jdbc-3.27.2.1.jar"/>
  </target>

</project>
